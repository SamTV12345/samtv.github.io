    <main class="">
        <div class="centered">
            <h1><span class="text-gradient">SamTV12345</span></h1>
            <Link title="GitHub" body="test" link="https://github.com/samtv12345" href="https://github.com/samtv12345"/>
            <Link title="Snapchat" body=""/>

