<style>
    h1 {
        color: white;
    }

    #background {
        position: absolute;
        background-image: url("/bild_zugeschnitten.jpg");
        width: 100vh;
        height: 100vh;
        background-size: cover;
        filter: blur(100px);
        z-index: -1;
    }


    main {
        height: 100vh;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        backdrop-filter: blur(100px);
    }
    .centered {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    }

    main {
        display: grid;
        place-items: center;
    }

    main > div {
    width: 80vw;
    border-radius: 60px;
    background-image: linear-gradient(rgb(236, 21, 103), rgb(223, 16, 18));
    }
</style>