---
interface Props {
    href: string;
    title: string;
    body?: string;
    logo?: any;
}
const { slots } = Astro;

const { href, title, body, logo } = Astro.props;
---


	<a class="link-item" href={href} target="_blank">
		<h2>
            <slot />
            {title}
		</h2>
		<p>
			{body}
		</p>
	</a>

<style>
    .link-item {
        position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    flex-direction: column;
    padding: 0.75rem 1rem;
    margin: 0.5rem 0;
    border-radius: 60px;
    border: 2px solid rgb(255, 255, 255);
    background-color: rgb(232, 20, 75);
    transition: background-color 0.3s ease;
    width: 60vh;
    height: 5vh;
    box-shadow: rgba(0, 0, 0, 0.2) 0px 8px 0px, rgb(232, 20, 75) 0px 8px 0px;
}

h2 {
    margin: 0;
    font-size: 1.25rem;
    color: white;
    text-align: center;
    line-height: 1.5;
}



.link-item > p {
    margin: 0;
    font-size: 0.9rem;
    color: #666;
    text-align: center;
    line-height: 1.5;
}

.link-item:hover {
    background-color: #382525;
}
</style>