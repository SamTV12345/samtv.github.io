---
interface Props {
    title: string;
    href: string;
    description: string;
    author: string;
    date: string
}
const { href,title,description, author, date } = Astro.props;
---


<div class="outer-div">
    <div class="header">
        <img class="logo" src="/image.png"/>
        <h2>{author}</h2>
        <span>{date}</span>
    </div>
    <img class="content-image"  src={href} alt={description}/>
    <div class="image-text"><span>{title}</span> - <span>{description}</span>
    </div>
</div>

<style>
    .content-image {
        border-radius: 20px;
    }
    .header {
        display: flex;
        flex-direction: row;
        gap: 5px;
        align-self: start;
        padding: 2px 2px 4px;
        align-items: flex-start; /* Align items to the start vertically */
    }

    .image-text span:first-child {
        font-weight: bold;
    }

    .image-text {
        text-align: left; /* Align text to the left */
        margin-bottom: 2px;
        color: white;
        align-self: start;
        margin-top: 5px;
    }
    .outer-div {
        display: inline-flex; /* Makes the div adapt to its content */
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #23262d;
        border-radius: 10px;
        padding: 0; /* Ensure no extra space is added */
    }


    img {
        max-width: 60%;
        opacity: 1;
        border: 2px solid rgb(255, 255, 255);
        margin: 0; /* Ensure img has no external margin */
    }
    .logo {
        align-self: start;
        width: 30px;
        height: 30px;
        border-radius: 10000px;
        opacity: 1;
        border: 2px solid rgb(255, 255, 255);
    }

    h2 {
        align-self: flex-end;
        padding-bottom: 5px;
        color: white;
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    .header span {
        padding-bottom: 5px;
        padding-left: 10px;
        color: #8a8a8a;
        align-self: flex-end;
        display: flex;
        font-size: 1rem;
        margin: 0;
    }
</style>
